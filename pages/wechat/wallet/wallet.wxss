page{
  background: #F7F7F7;
}

.wallet-container{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.wallet-content{
  width: 95%;
  display: flex;
  flex-direction: column;
}

.header{
  width: 100%;
  display: flex;
  flex-direction: row;
  background: #3BAC6A;
  color: white;
  height: 260rpx;
  border-radius: 15rpx;
  box-shadow: 0rpx 0rpx 10rpx 4rpx gainsboro;
  padding: 20rpx 0rpx;
}

.header-left{
  width: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center
}

.header-right{
  width: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header-right{
  width: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.amount{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 25rpx;
  color: gainsboro;
}

.header .icon{
  width: 100%;
  display: flex;
  flex-direction: column;
  height: 60%;
  align-items: center;
  justify-content: flex-end;
}

.right-icon{
  width: 100%;
  display: flex;
  flex-direction: column;
  height: 60%;
  align-items: center;
  justify-content: flex-end;
}

.left-label{
  width: 100%;
  height: 40%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  font-size: 35rpx;
  margin-top: 15rpx;
}

.right-label{
  height: 40%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  font-size: 35rpx;
  margin-top: 15rpx;
}

.right-icon image{
  width: 80rpx;
  height: 80rpx;
}

.icon image{
  width: 80rpx;
  height: 80rpx;
}

.tencent-content{
  width: 100%;
  display: flex;
  flex-direction: column;
  background: white;
  margin-top: 20rpx;
  border-radius: 15rpx;
}

.tencent-title{
  width: 100%;
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
  padding: 30rpx 30rpx;
  color: gray;
}

.tencent-item{
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.item{
  width: 33%;
  height: 200rpx;
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-top-style:solid;
  border-width:1rpx;
  border-color: #F7F7F7;
  color: gray;
}

.item-right-border{
  border-right-style:solid;
  border-width:1rpx;
  border-color: #F7F7F7;
}

.item-image{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.tencent-item image{
  width: 70rpx;
  height: 70rpx;
}

.amount-input{
  width: 250rpx;
  border-radius: 10rpx;
  text-align: center;
  background: white;
}