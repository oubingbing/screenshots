<view class="wallet-container">
  <view class='wallet-content'>
    <view class='header'>
      <view class='header-left'>
        <view class='icon'>
          <image src='/images/wallet-scan.png'></image>
        </view>
        <view class='left-label'>收付款</view>
      </view>
      <view class='header-right'>
        <view class='right-icon'>
          <image src='/images/right-wallet.png'></image>
        </view>
        <view class='right-label'>
          <view>钱包</view>
          <view class='amount' catchtap='showAmountInput' wx:if="{{showAmountInput==false}}">
            <view>￥</view>
            <view>{{amount}}</view>
          </view>
          <view class='amount' wx:if="{{showAmountInput==true}}">
            <input type='text' 
                    class='amount-input'
                    value='{{amount}}'
                    placeholder="设置余额"
                    bindblur="loseAmountCous" 
                    bindinput='getAmount'/>
          </view>
        </view>
      </view>
    </view>

